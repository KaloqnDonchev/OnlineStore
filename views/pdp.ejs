            <li class="price-currency"><%= product.currency %></li>
        </ul>
        <select class="currency">
            <% currencies.forEach((currency) => { %>
            <option value="<%= currency.Value %>" id="currency-option" name="<%= currency.IDMoneda %>">
                <%= currency.IDMoneda %></option>
            <% }) %>
        </select>
